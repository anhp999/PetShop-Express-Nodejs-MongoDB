<div id="regisign" class="paddinglogin padmarlogin hide">
    <div class="row">
        <div class="colrsleft col4 col2 col3 ">
                <div class="register">
                    <h4>New To PetFriends</h4>                             
                    <form action="/usersn/signup" name="signup" method="post" >
                            <div class="emailinput">
                                <div class="space">
                                    <label for="email"><b>Email</b></label>
                                    <input type="text" placeholder="Enter Email" name="email" required>
                                </div>
                                {{#if hasErrors}} 
                                <p style="color:red">{{messages.[0]}}</p>
                                {{/if}}
                                <div class="space">
                                    <label for="password"><b>Password</b></label>
                                    <input type="password" placeholder="Enter Password" name="password" required>
                                </div>
                                {{#if hasErrors}} 
                                <p style="color:red">{{messages.[1]}}</p>
                                {{/if}}
                                <div class="space">
                                    <label for="verifypassword"><b>Confirm Password</b></label>
                                    <input type="password" placeholder="Confirm Password" name="verifypassword" required>
                                </div>
                                {{#if hasErrors}} 
                                <p style="color:red">{{messages.[2]}}</p>
                                {{/if}}
                                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                                <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>
                                {{!-- <input type="hidden" name="isAction" value="insert" > --}}
                                <button type="submit" >Register</button>
                            </div>
                    </form>                      
                </div>
            </div>
    </div>
</div>