<div class="card card-body">
    <h3>Chỉnh sửa bài viết mới</h3>
    <form action="/posts/{{post._id}}?_method=PUT" method="POST">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
        <label for="title">Tiêu Đề</label>
        <input type="text" class="form-control" name="title" required value="{{post.title}}">
    </div>
    <div class="form-group">
        <label for="title">Nội dung</label>
        <textarea class="form-control" name="text" required>{{post.text}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Chấp nhận thay Đổi</button>
    </form>
</div>