<div class="row" style="top: 28px">
    {{#if message}}
                    <div class="alert alert-{{message.type}}" id="success-alert1">
                        <button type="button" class="close" data-dismiss="alert">x</button>
                        <strong>{{message.intro}}! </strong> {{message.message}}.
                    </div>
                {{/if}}
    <div class="col-md-6">
            <div class="card-header">
                <h3>Edit Product</h3>
            </div>
            <div class="card card-body">        
                <form action="/admin/saved/{{newProduct._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <label for="title">Name</label>
                    <input type="text" class="form-control" name="name" required value="{{newProduct.name}}">
                </div>
                <div class="form-group">
                    <label for="title">Description</label>
                    <textarea class="form-control" name="desc" required>{{newProduct.desc}}</textarea>
                </div>
                <div class="form-group">
                    <label for="title">Price</label>
                    <textarea class="form-control" name="price" required>{{newProduct.price}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
                </form>               
            </div>
    </div>
    <div class="col-md-6">
            <div class="card-header">
                <h3> Add More Images </h3>
            </div>    
            <form action="/admin/uploadimg/{{newProduct._id}}?_method=PUT" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-8">
                        <input type="file" class="form-control"  name="images" id="formFile" multiple>
                    </div>
                    <div class="col-2">
                        <input type="submit" class="btn btn-warning" value="Upload Images">
                    </div>
                </div>
            </form>  
        <div class="row" style="top: 10px;"> 
            {{!-- Img in Product Model --}}
             {{#each productImg}}
                {{#if img}}
                    <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                        <div class="featured__item">
                            <div class="featured__item__pic set-bg"><img src={{img}} style="width:200px; height:160px">
                                <ul class="featured__item__pic__hover">                                        
                                    <li>
                                        <li><a href="#" data-toggle="modal" data-target="#exampleModal1"><i class="fa-solid fa-trash-can" style="margin-left: 0px;top: -2px;"></i></a></li>
                                    </li>
                                    {{> confirmDeleteImg}}     
                                </ul>
                            </div>
                        </div>
                    </div>
                {{else}}
                    {{#if imgPath}}
                        <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                        <div class="featured__item">
                            <div class="featured__item__pic set-bg"><img src='data:{{imgPath.contentType}};base64,{{imgPath.imageBase64}}' style="width:200px; height:160px">
                                <ul class="featured__item__pic__hover">                                        
                                    <li>
                                        <li><a href="#" data-toggle="modal" data-target="#exampleModal"><i class="fa-solid fa-trash-can" style="margin-left: 0px;top: -2px;"></i></a></li>
                                    </li>  
                                     {{> confirmDeleteImg}}                                     
                                </ul>                                 
                            </div>
                        </div>
                    </div>
                    {{/if}}
                {{/if}}
            {{/each}}       
                         {{!-- Product Img Model --}}
            {{#each all_images}} 
                    {{#if imageBase64}}
                        <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                            <div class="featured__item">
                                <div class="featured__item__pic set-bg"><img src='data:{{contentType}};base64,{{imageBase64}}' style="width:200px; height:160px">
                                    <ul class="featured__item__pic__hover">                                        
                                        <li>
                                            <li><a href="#" data-toggle="modal" data-target="#exampleModal2"><i class="fa-solid fa-trash-can" style="margin-left: 0px;top: -2px;"></i></a></li>
                                        </li> 
                                        {{> confirmDeleteProImg}}     
                                    </ul>
                                </div>
                            </div>
                        </div>
                    {{/if}}
            {{/each}}                         
        </div>              
    </div>
</div>
