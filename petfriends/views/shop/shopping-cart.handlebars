<div class="hero__categories__all breadcrumb_pos">
    <ol class="breadcrumb" style="background-color: white;" >
        <li class="breadcrumb-item"><a href="/"><small>Home</small></a></li>
        <li class="breadcrumb-item active"><small>My Shopping Cart</small></li>
    </ol>
</div>
<section class="shop-cart spad sec_body">
    {{#if products}}
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shop__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each products}}
                                <tr>
                                    <td class="cart__product__item">
                                        <img src="{{this.item.img}}" style="width: 100px;"alt="">
                                        <div class="cart__product__item__title">
                                            <h6>{{this.item.name}}</h6>
                                            <div class="rating">
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="cart__price oldPri">$ {{this.item.price}}</td>
                                    <td class="cart__quantity">
                                        <div class="pro-qty">
                                            <button id="mi{{this.item._id}}" class="minus-btn" data-id="{{this.item._id}}" style="float: left;width: 40px;height: 35px;margin-top: 7px;border: 1px solid rgba(0,0,0,.09);margin-left: -38px;" ><i class="bi bi-dash-lg" style="margin-left: 0;"></i></button>
                                            <input id="qty{{this.item._id}}" class="qtyinput" type="text" value="{{this.quantity}}"readonly>
                                            <button id="plus{{this.item._id}}" class="plus-btn" data-id="{{this.item._id}}" style="width: 40px;height: 35px;margin-top: 7px;margin-left: -11px;border: 1px solid rgba(0,0,0,.09);"><i class="bi bi-plus-lg" style="margin-left: 0;"></i></button>
                                        </div>
                                    </td>
                                    
                                    <td id="total{{this.item._id}}" class="cart__total">$ {{this.Total}}</td>
                                    <td class="cart__close">
                                       <a href="/shop/{{this.item._id}}" ><span class="icon_close"><i class="bi bi-x-lg" style="margin-left:0;"></i></span></button>
                                    </td>
                                    {{!-- <form action="/shopping/{{this.item._id}}?_method=DELETE" method="POST">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <span class="icon_close"><i class="bi bi-x-lg" style="margin-left:0;"></i></span>
                                        
                                        <input type="submit" value="XÃ³a" class="btn btn-danger btn-block">
                                    </form>   
                                    </td>    --}}                              
                                </tr>  
                                {{/each}}                              
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="cart__btn">
                        <a href="#">Continue Shopping</a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6"></div>                  

                <div class="col-lg-4 offset-lg-2">
                    <div class="cart__total__procced">
                        <h6>Cart total</h6>
                        <ul>
                            <li>Total Products <span id="totalQty"> {{totalQuantity}}</span></li>
                            <li>Total Price <span id="totalPr">$ {{getTotalPrice}}</span></li>
                        </ul>                        
                        <a href="/shop/orders" class="primary-btn">Proceed to checkout</a>
                    </div>
                </div>
            </div>
        </div>
        {{else}}
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                <h2>No Items In Cart</h2>
            </div>
        </div>        
    {{/if}}
    </section>
